{
  "functions": {
    "api/amazon/sync.js": {
      "maxDuration": 120,
      "memory": 1024
    },
    "api/chat.js": {
      "maxDuration": 60,
      "memory": 512
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/alerts",
      "schedule": "0 13 * * 1"
    },
    {
      "path": "/api/cron/reports",
      "schedule": "15 13 * * 1"
    }
  ]
}
